[{"database_id":"68","surah_number":"104","verse_number":"1","ayah_text":"Kecelakaanlah bagi setiap pengumpat lagi pencela,"},{"database_id":"68","surah_number":"104","verse_number":"2","ayah_text":"yang mengumpulkan harta dan menghitung-hitung,"},{"database_id":"68","surah_number":"104","verse_number":"3","ayah_text":"dia mengira bahwa hartanya itu dapat mengkekalkannya,"},{"database_id":"68","surah_number":"104","verse_number":"4","ayah_text":"sekali-kali tidak! Sesungguhnya dia benar-benar akan dilemparkan ke dalam Huthamah."},{"database_id":"68","surah_number":"104","verse_number":"5","ayah_text":"Dan tahukah kamu apa Huthamah itu?"},{"database_id":"68","surah_number":"104","verse_number":"6","ayah_text":"(yaitu) api (yang disediakan) Allah yang dinyalakan,"},{"database_id":"68","surah_number":"104","verse_number":"7","ayah_text":"yang (membakar) sampai ke hati."},{"database_id":"68","surah_number":"104","verse_number":"8","ayah_text":"Sesungguhnya api itu ditutup rapat atas mereka,"},{"database_id":"68","surah_number":"104","verse_number":"9","ayah_text":"(sedang mereka itu) diikat pada tiang-tiang yang panjang."}]